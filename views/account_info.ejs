<% include ./partials/header %>
  	<div class='container-fluid' id='primary-wrapper'>
    	<div class='row'>
    		<div class='col-xs-3 col-md-3'>
    			<div class='account-nav'>
    				<h3>My Account</h3>
    				<ul>
    					<li><a href='/account/meta-settings'>META Settings</a></li>
    					<li><a href='/account/info'>Account Information</a></li>
    					<li><a href='/account/security'>Security & Other</a></li>
    					<li><a href='/logout'>Log Out</a></li>
    				</ul>
    			</div>
    		</div>
    		<div class='col-xs-9 col-md-9'>
    			<div class='account-content'>
    			    <h1>User Information</h1>
    			    <p>Update your info here. Be sure to save the changes when you're done!</p>
    			    <p>Most of this is not required, but it can help us server you better in the future.</p>
    				<form class='user-account-edit' action='/account/info?_method=PUT' method='POST'>
    					<div class='form-group' id='user-names'>
    					  <label>Username: 
    					      <input type='text' name='user[username]' value='<%= currentUser.username %>'>
    					  </label>
    					  <label>First Name: 
                              <input type='text' name='user[firstName]' value='<%= currentUser.firstName %>'>
                          </label> 
    			          <label>Last Name: 
                              <input type='text' name='user[lastName]' value='<%= currentUser.lastName %>'>
                            </label> 
                          <label>Phone: 
		                    <input type='phone' name='user[phone]' value='<%= currentUser.phone %>'>
    					  </label>
    					</div>
    					<div class='form-group' id='user-location'>
    					  <label>Address</label>
    					  <label>Street: 
                              <input type='text' name='user[location][street]' value='<%= currentUser.location.street %>'>
                          </label> 
    			          <label>City: 
                              <input type='text' name='user[location][city]' value='<%= currentUser.location.city %>'>
                          </label>
    			          <label>State: 
      						<select name='user[location][state]'>
      						<% states.forEach(function(state) { %>
      						<%     if(currentUser.location.state == state) {%>
      							<option value='<%= state %>' selected><%= state %></option>
      							<% } else { %>
      							<option value='<%= state %>'><%= state %></option>
      							<% } %>
      						<% }); %>
      						</select>
  					      </label>
  					      <label>Country: 
        					<select name='country'>
        					  <% countries.forEach(function(country) { %>
        					  <%     if(currentUser.location.country == country) { %>
        					  	<option value='<%= country %>' selected><%= country %></option>
        					  	<% } else { %>
        					  	<option value='<%= country %>'><%= country %></option>
        					  	<% } %>
        					  <% }); %>
        					</select>
				          </label>
  					      <label>Zip Code: 
                              <input type='text' name='user[location][zip]' value='<%= currentUser.location.zip %>'>
                          </label>
    					</div>
    					<div class='form-group'>
    						<label>E-Mail: 
                              <input type='email' name='user[email]' value='<%= currentUser.email %>'>
                            </label>
    						<label>Gender: 
    							<select name='user[gender]'>
    								<% if(currentUser.gender === 'male') {          %>
    									<option value='male' selected='selected'>Male</option>
    									<option value='female'>Female</option>
    									<option value='unspecified'>Prefer Not to Say</option>
    								<% } else if(currentUser.gender === 'female') { %>
    									<option value='male'>Male</option>
    									<option value='female' selected='selected'>Female</option>
    									<option value='unspecified'>Prefer Not to Say</option>
    								<% } else {                                     %>
    									<option value='male'>Male</option>
    									<option value='female'>Female</option>
    									<option value='unspecified' selected='selected'>Prefer Not to Say</option>
    								<% }; %>
    							</select>
  						  </label>
  						  <button class='btn btn-success account-form-btn' type='submit' >SAVE CHANGES</button>
    					</div>
    				</form>	
    			</div>
    		</div>
    	</div>
    </div>
<% include ./partials/footer %>