        <div class='row'>
          <div class='col-xs-12 col-md-12'>
            <div class='content-divider-lg'>
              <h1>Upcoming Streams</h1>
            </div>
            <% if(!upcomingStreams) { %>
              <h1>We don't have any upcoming streams :(. We're working on it!</h1>
            <% } else { %>
            <div class='row view-list'>
		          <div class='col-xs-12 col-md-12'>
					      <div class='table-responsive event-list'>
						      <table class='table'>
                    <thead>
                      <tr>
                        <th>Game/Event</th>
                        <th>Event Page</th>
                        <th>Location</th>
                        <th>Date/Time</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% upcomingStreams.forEach(function(upcomingStream) { %>
                      <tr>
                        <td><img class='event-game-thumbnail' src='<%= upcomingStream.image %>'></td>
                        <td><a href='/events/<%= upcomingStream._id %>'><%= upcomingStream.title %></a></td>
                        <td><%= upcomingStream.venue + ', ' + upcomingStream.city + ', ' + upcomingStream.state %></td>
                        <td><%= upcomingStream.date.toDateString() %></td>
                      </tr>
                    <% }); %>
                    <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
