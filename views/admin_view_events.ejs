<% include ./partials/admin_header %>
	  <div class='container-fluid'>
		<div class='row view-header'>
			<div class='col-xs-12 col-md-12'>
				<h1>Events</h1>
				<div class='clear-div'>
					<hr>
				</div>
				<div class='form-group row'>
			    	<div class='col-xs-4 col-md-4'>
			    		<a class="btn btn-primary btn-est" href="/admin/new-event" role="button">Add a New Event</a>
			    	</div>
				  	<div class='col-xs-2 col-md-2 search-label'>
				  		<label for='content-search'>Search: </label>
				  	</div>
				  	<div class='col-xs-6 col-md-6 search-field'>
				  		<input class='form-control' type='search' placeholder='search events' id='content-search'>
				  	</div>
			    </div>
			</div>
		</div>
	    <div class='row view-list'>
			<div class='col-xs-12 col-md-12'>
				<div class='table-responsive'>
					<table class='table'>
					  <thead>
					    <tr>
						  <th>Event Date</th>
						  <th>Title</th>
						  <th>Games</th>
						  <th>Location</th>
						  <th>City</th>
						  <th>State</th>
						  <th>EST Stream</th>
						  <th>Edit/View</th>
					    </tr>
					  </thead>
					  <tbody>
					  <% events.forEach(function(event){ %>
					    <tr>
					      <td><%= event.date.toDateString() %></td>
					      <td><%= event.title %></td>
					      <td><%= event.games %></td>
					      <td><%= event.venue %></td>
					      <td><%= event.city %></td>
					      <td><%= event.state %></td>
					      <td><%= event.stream %></td>
					      <td>
					    	<a href='/admin/edit-event/<%= event._id %>'>Edit</a> / 
					    	<a href='/events/<%= event._id %>'>View</a>
					      </td>
					    </tr>
					  <% }); %>
					  </tbody>
				    </table>
				</div>
			</div>
		</div>
	  </div>
<% include ./partials/admin_footer %>