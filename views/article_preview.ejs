<% include ./partials/article_header %>
		<div class='container-fluid' id='primary-wrapper'>
			<div class='row'>
				<div class='col-xs-12 col-md-12' id='page-header'>
					<h1>News</h1>
					<form class='content-search' action='/search/articles' method='GET'>
						<p>Search Articles</p>
						<div class="input-group">
							<input type="text" class="form-control" name='search' placeholder="looking for something...">
							<span class="input-group-btn">
								<button class='btn btn-primary btn-est' type='submit'>Search</button>
							</span>
						</div>
					</form>
				</div>
				<hr>
			</div>
			<div class='row'>
				<div class='col-xs-4 col-md-4' id='sidebar-container'>
					<div class='content-divider-sm'>
						<h2>Related</h2>
					</div>
					<p>Article Preview Mode</p>
					<div class='clear-div'>
						<hr>
					</div>
					<div class='content-divider-sm'>
						<h2>Related Videos</h2>
					</div>
					<p>Article Preview Mode</p>
					<div class='clear-div'>
						<hr>
					</div>
				</div>
				<div class='col-xs-8 col-md-8' id='post-wrapper'>
					<article>
						<header>
							<h1><%= articlePreview.title %></h1>
						</header>
						<div class='meta-container'>
							<p class='article-author-label'>Author: </p>
							<a class='article-author-link' href='/search/author?search=<%= articlePreview.author %>'><%=articlePreview.author%></a>
							<p class='article-pub-date'>Published: <%= articlePreview.published.toDateString() %></p>
							<p class='article-categories-list'>Categories: <% articlePreview.categories.forEach(function(category){ %> <%= category + ', ' %> <% }); %></p>
						</div>
						<div class='post-content'>
							<figure>
								<img class='article-figure' src='<%=articlePreview.image%>' alt='<%=articlePreview.title %>'>
								<figcaption>
									<p class='article-figure-caption'><%= articlePreview.imageCaption %> -</p>
									<p class='article-figure-source'>Source: <%= articlePreview.imageSource %></p> 
								</figcaption>
							</figure>
							<div class='article-body'><span><%- articlePreview.body %></span></div>
							<% if(!articlePreview.sourceLink) { %>
								
							<% } else { %>
								<p class='article-body'>Source: <a class='source-link' target='_blank' href='<%= articlePreview.sourceLink %>'>Click here</a></p>
							<% } %>
							<a class='btn btn-outline-primary btn-est-outline' href='/news'>Return to News</a>
						</div>
					</article>
				</div>
			</div>
		</div>
<% include ./partials/footer %>