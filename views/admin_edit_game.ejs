<% include ./partials/admin_header %>
		<div class='container-fluid'>
				<div class='page-header'>
					<h2>Edit '<%= game.title %>'</h2>
					<a class='btn btn-primary btn-est' href='/admin/view-games' role='button'>Return to Games</a>
				</div>
				<hr>
				<div class='row'>
					<div class='col-xs-12 col-md-12'>
						<form class='new-item-entry' action='/admin/view-games/<%= game._id %>?_method=PUT' method='POST'>
							<div class='form-group row'>
								<div class='col-xs-6 col-md-6'>
									<label for='title'>Title: </label>
									<input class='form-control' type='text' name='game[title]' id='title' value='<%= game.title %>'>
								</div>
								<div class='col-xs-6 col-md-6'>
									<label for='abbreviation'>Abbreviation (SFV, LoL, etc): </label>
									<input class='form-control' type='text' name='game[abbreviation]' id='abbreviation' value='<%= game.abbreviation %>'>
								</div>
							</div>
							<div class='form-group row'>
								<div class='col-xs-6 col-md-6'>
									<label for='platform'>Platform: </label>
									<input class='form-control' type='text' name='game[platform]' id='platform' value='<%= game.platform %>'>
								</div>
								<div class='col-xs-6 col-md-6'>
									<label for='genre'>Genre: </label>
									<select class='form-control custom-select' type='select' name='game[genre]' id='genre'>
								  	<% genres.forEach(function(genre){ %>
								  	<%     if(game.genre == genre) { %>
								  	  	<option value='<%= genre %>' selected><%= genre %></option>
								  	<% } else { %>
								  		<option value='<%= genre %>'><%= genre %></option>
								  	<% } %>
								  	<% }); %> 
								  	</select>
								</div>
							</div>
							<div class='form-group row'>
								<div class='col-xs-6 col-md-6'>
									<label for='logopng'>PNG Logo Link: </label>
									<input class='form-control' type='text' name='game[logopng]' id='logopng' value='<%= game.logopng %>'>
								</div>
								<div class='col-xs-6 col-md-6'>
									<label for='logojpg'>JPG Logo Link: </label>
									<input class='form-control' type='text' name='game[logojpg]' id='logojpg' value='<%= game.logojpg %>'>
								</div>
							</div>
							<div class='clear-div'>
								<hr>
							</div>
							<button class='btn btn-primary btn-est' type='submit'>Update Game</button>
						</form>
						<div class='clear-div'>
							<hr>
						</div>
						<form class='new-item-entry' action='/admin/view-games/<%= game._id %>?_method=DELETE' method='POST'>
							<button class='btn btn-danger btn-est-danger' type='submit'>DELETE GAME</button>
					  	</form>
					</div>
				</div>
			</div>
	  
<% include ./partials/admin_footer %>