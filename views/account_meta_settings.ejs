<% include ./partials/header %>

  <div class='container-fluid' id='primary-wrapper'>
  	<div class='row'>
  		<div class='col-xs-3 col-md-3'>
  			<div class='account-nav'>
  				<h3>My Account</h3>
  				<ul>
  					<li><a href='/account/meta-settings'>META Settings</a></li>
  					<li><a href='/account/info'>Account Information</a></li>
  					<li><a href='/account/security'>Security</a></li>
  					<li><a href='/logout'>Log Out</a></li>
  				</ul>
  			</div>
  		</div>
  		<div class='col-xs-9 col-md-9'>
  			<div class='account-content'>
  				<div class='meta-settings'>
            <h1>Games</h1>
            <p>These are your game subscriptions. Change them anytime, just be sure to hit 'Save' when you're done!</p>
            <form class='user-meta-settings' action='/account/meta-settings?_method=PUT' method='POST'>
              <div class='game-select' id='user-meta-settings'>
                <% var userMeta = currentUser.meta; %>
                <% games.forEach(function(game) {   %>
                <%   if(userMeta.find(meta => meta.game == game.title)) { %>
                    <label>
                      <input type='checkbox' name='game' value='<%= game.title %>' checked>
                      <img class='meta-select-thumbnail' id='game-thumbnail' src='<%= game.logopng %>' alt='<%= game.title + ' Logo' %>'>
                    </label>
                <% } else { %>
                    <label>
                      <input type='checkbox' name='game' value='<%= game.title %>' >
                      <img class='meta-select-thumbnail' id='game-thumbnail' src='<%= game.logopng %>' alt='<%= game.title + ' Logo' %>'>
                    </label>
                <% } %>
                <% if((userMeta.find(meta => meta.events == true) && userMeta.find(meta => meta.game == game.title))) { %>
                    <label class='sub-meta' for='game'>Events <br>
                      <input id='events-check' type='checkbox' name='events' checked>
                    </label>
                <% } else { %>
                    <label class='sub-meta' for='game'>Events <br>
                      <input id='events-check' type='checkbox' name='events'>
                    </label>
                <% }; %>
                <% if((userMeta.find(meta => meta.news == true) && userMeta.find(meta => meta.game == game.title))) { %>
                    <label class='sub-meta'>News <br>
                      <input id='news-check' type='checkbox' name='news' checked>
                    </label>
                <% } else { %>
                    <label class='sub-meta'>News <br>
                      <input id='news-check' type='checkbox' name='news'>
                    </label>
                <% }; %>
                <% }); %>
                </div>
              <button type='submit'>Save</button>
            </form>
          </div>
  			</div>
  		</div>
  	</div>
  </div>
<% include ./partials/footer %>