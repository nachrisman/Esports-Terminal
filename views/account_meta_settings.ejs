<% include ./partials/header %>
      <div class='container-fluid' id='primary-wrapper'>
      	<div class='row'>
      		<div class='col-xs-2 col-md-2'>
      			<div class='account-nav'>
      				<h3>My Account</h3>
      				<ul>
      					<li><a href='/account/meta-settings'>META Settings</a></li>
      					<li><a href='/account/info'>Account Information</a></li>
      					<li><a href='/account/security'>Security & Other</a></li>
      					<li><a href='/logout'>Log Out</a></li>
      				</ul>
      			</div>
      		</div>
  		    <div class='col-xs-10 col-md-10'>
  		    	<div class='account-content'>
  		    	   <h1>Games</h1>
               <p>These are your game subscriptions. Change them anytime!</p>
               <hr>
  		    	  <div class='meta-games'>
  		    	      <% if(currentUser.active == true) { %>
  		    	    <form action='/account/meta-settings?_method=PUT' method='POST'>
  		    	      <div  class='meta-settings'>
  		    	    <% var userMeta = currentUser.meta %>
  		    	    <% games.forEach(function(game){ %>
  		    	    <div class='form-group row meta-selection-row'>
  		    	      <label class='meta-selection-title'><%= game.title %></label>
  		    	      <div class="form-check form-check-inline sub-meta-check-row">
  		    	        <label class="btn btn-primary btn-est-sub-meta">
  		    	          <% if(userMeta.find(meta => meta.news == true && meta.game == game.title)) { %>
  		    	          <input type="checkbox" name='news[]' value='<%= game.title %>' autocomplete="off" checked>News
  		    	          <% } else { %>
  		    	          <input type="checkbox" name='news[]' value='<%= game.title %>' autocomplete="off">News
  		    	          <% } %>
  		    	        </label>
  		    	        <label class="btn btn-primary btn-est-sub-meta">
  		    	          <% if(userMeta.find(meta => meta.events == true && meta.game == game.title)) { %>
  		    	          <input type="checkbox" name='events[]' value='<%= game.title %>' autocomplete="off" checked>Events
  		    	          <% } else { %>
  		    	          <input type="checkbox" name='events[]' value='<%= game.title %>' autocomplete="off">Events
  		    	          <% } %>
  		    	        </label>
  		    	      </div>  
                </div>
  		    	    <% }); %>
  		    	    </div>
  		    	    <hr>
  		    	    <button class='btn btn-primary btn-est account-form-btn' type='submit'>Save Changes</button>
  		    	    </form>
  		    	    <% } else { %>
  		    	    <p class='text-danger'>In order to view this page &amp; change your META settings, you must activate your account by following the verification link in your email.</p>
  		    	    <a href='/resend-email-verification?uid=<%= currentUser._id %>'><p>Click to Resend Verification Email</p></a>
  		    	    <% } %>
  			</div>
  		</div>
  	</div>
  </div>
  </div>
<% include ./partials/footer %>