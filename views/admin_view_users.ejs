<% include ./partials/admin_header %>
	  <div class='container-fluid'>
		<div class='row view-header'>
			<div class='col-xs-12 col-md-12'>
				<h1>Users</h1>
				<div class='clear-div'>
					<hr>
				</div>
				<div class='form-group row'>
			    	<div class='col-xs-4 col-md-4'>
			    		<a class="btn btn-primary btn-est" href="/admin/new-user" role="button">Add a New User</a>
			    	</div>
				  	<div class='col-xs-2 col-md-2 search-label'>
				  		<label for='content-search'>Search: </label>
				  	</div>
				  	<div class='col-xs-6 col-md-6 search-field'>
				  		<input class='form-control' type='search' placeholder='search users' id='content-search'>
				  	</div>
			    </div>
			</div>
		</div>
		<div class='row view-list'>
			<div class='col-xs-12 col-md-12'>
				<div class='table-responsive'>
					<table class='table'>
					  <thead>
					    <tr>
						  <th>Name</th>
						  <th>Username</th>
						  <th>E-Mail Address</th>
						  <th>Phone Number</th>
						  <th>Role</th>
						  <th>Edit</th>
					    </tr>
					  </thead>
					  <tbody>
					  <% users.forEach(function(user){  %>
					    <tr>
					      <td><%= user.fullname %></td>
					      <td><%= user.username %></td>
					      <td><%= user.email %></td>
					      <td><%= user.phone %></td>
					      <td><%= user.role %></td>
					      <td>
					    	<a href='/admin/edit-user/<%= user._id %>'>Edit</a>
					      </td>
					    </tr>
					  <% }); %>
					  </tbody>
				    </table>
				  </div>
				</div>
			</div>
	  </div>
<% include ./partials/admin_footer %>