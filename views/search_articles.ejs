<% include ./partials/header %>
		<div class='container-fluid'>
			<div class='search-query-flex'>
				<div class='section-header' id='search-query-header'>
					<div class="search-form-container">
						<form id="search-again" action="/search/articles" method="GET">
							<p>Search again:</p>
							<div id="search-again-input">
							  <input type="search" class="form-control" name='search' placeholder="what're ya lookin' for?">
							  <button class="btn btn-outline-secondary acct-btn" id="search-again-btn" type="submit">Get it!</button>
							</div>
						</form>
						<hr>
					</div>
					<div id='search-query-header-text'>
						<% if(foundArticles.length < 1) { %>
						<h1>We couldn't find anything for "<%= search %>"</h1>
						<% } else { %>
						<h1>Search results for "<%= search %>"</h1>
						<p>We dug deep. Here's what we found!</p>
						<% } %>
						<hr>
					</div>
				</div>
				<div class='search-query-results'>
					<% if(foundArticles && foundArticles.length > 0) { %>
						<% var lastSeen = Date.parse(foundArticles[foundArticles.length - 1].published); %>
						<% foundArticles.forEach(function(foundArticle){ %>
							<% if(foundArticle.contentType != 'video') { %>
							<div class='post-preview'>
								<article>
									<div id='header-preview'>
										<header>
											<h1 class='article-header'><a href='/news/<%= foundArticle._id %>' ><%= foundArticle.title %></a></h1>
											<a class='article-author-link' href='/search/author?search=<%= foundArticle.author %>'><%= foundArticle.author %></a>
											<p class='article-pub-date'> - <%= foundArticle.published.toDateString() %></p>
										</header>
									</div>
									<% if(foundArticle.contentType != 'video'){ %>
									<div class='image-preview'>
										<figure>
											<a href='/news/<%= foundArticle._id %>'>
												<img class='article-figure' src='<%= foundArticle.image %>' alt='<%= foundArticle.title %>'>
											</a>
										</figure>
									</div>
									<% } %>
									<div class='post-content' id='content-preview'>
										<div class='article-body-preview'><%- foundArticle.body.substr(0, 150) %>...</div>
									</div>
								</article>
							</div>
							<hr>
							<% } %>
						<% }); %>
					<% } %>
				</div>
			</div>
		</div>
<% include ./partials/footer %>
