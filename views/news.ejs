<% include ./partials/header %>
	  	<div class='container-fluid' id='primary-wrapper' >
			<div class='row'>
	      		<div class='col-xs-12 col-md-12' id='page-header'>
	            <h1>News</h1>
	            <form class='content-search' action='/search/articles' method='GET'>

	        			<div class="input-group">
	    			      <input type="text" class="form-control" name='search' placeholder="search articles...">
	    			      <span class="input-group-btn">
	    			        <button class='btn btn-primary btn-est' type='submit'>Search</button>
	    			      </span>
	    			    </div>
	        		</form>
	          </div>
	          <hr>
	        </div>
			<div class='row'>
		    	<div class='col-xs-4 col-md-4' id='sidebar-container'>
					<div class='content-divider-sm'>
			  			<h2>Missed It?</h2>
					</div>
					<div class='preview'>
					<% if(pastArticles.length == 0) { %>
			  			<p>No Articles.. whaaaaat?</p>
					<% } else { %>
						<% pastArticles.forEach(function(pastArticle) { %>
			  			<div class='article-preview'>
							<a class='preview-link' href='/news/<%= pastArticle._id %>'>
								<img class='article-preview-image' src='<%= pastArticle.image %>'>
				  				<div class='preview-headline'>
									<h3 class='article-title'><%= pastArticle.title.substr(0, 100) %></h3>
				  				</div>
							</a>
			  			</div>
					<% }); %>
					<% }; %>
					</div>
					<div class='clear-div'>
						<hr>
					</div>
					<div class='content-divider-sm'>
			  			<h2>Random Picks</h2>
					</div>
					<div class='preview'>
					<% if(randomArticles.length == 0) { %>
			  			<p>No articles... whaaat?</p>
					<% } else { %>
					<% randomArticles.forEach(function(randomArticle) { %>
						<% if(randomArticle.contentType != 'video') { %>
			  			<div class='article-preview'>
							<a class='preview-link' href='/news/<%= randomArticle._id %>'>
					  			<div class='article-preview-image'>
									<img class='article-preview-image' src='<%= randomArticle.image %>'>
					  			</div>
					  			<div class='preview-headline'>
									<h3 class='article-title'><%= randomArticle.title.substr(0, 100) %></h3>
								</div>
							</a>
			 			</div>
			  		<% } %>
					<% }); %>
					<% }; %>
					</div>
					<div class='clear-div'>
			  			<hr>
					</div>
					<div class='content-divider-sm'>
			  			<h2>Popular Videos</h2>
					</div>
					<div class='preview'>
						<% if(pastArticles.length == 0) { %>
			    			<p>No Articles... whaaaat?</p>
						<% } else { %>
						<% pastArticles.forEach(function(pastArticle) { %>
							<% if(pastArticle.contentType == 'video') { %>
			  				<div class='article-preview'>
								<a class='preview-link' href='/news/<%= pastArticle._id %>'>
				  					<div class='article-preview-image'>
										<img class='article-preview-image' src='<%= pastArticle.image %>'>
				  					</div>
				  					<div class='preview-headline'>
										<h3 class='article-title'><%= pastArticle.title.substr(0, 100) %></h3>
				  					</div>
								</a>
			  				</div>
			  			<% } %>
						<% }); %>
						<% }; %>
					</div>
					<div class='clear-div'>
			  			<hr>
					</div>
		  		</div>
	  			<div class='col-xs-8 col-md-8' id='post-wrapper' >
					<div class='content-feed'>
		  				<div class='content-divider-sm' id='news-feed-header'>
							<h2>News Feed</h2>
		  				</div>
		  				<% var lastSeen = Date.parse(articles[articles.length - 1].published); %>
						<% articles.forEach(function(article){ %>
						<div class='post-preview'>
				  			<article>
								<div id='header-preview'>
					 				<header>
						   				<h1 class='article-header'><a href='/news/<%= article._id %>' ><%= article.title %></a></h1>
						   				<a class='article-author-link' href='/search/author?search=<%= article.author %>'><%= article.author %></a>
						   				<p class='article-pub-date'>-<%= article.published.toDateString() %></p>
					 				</header>
								</div>
								<% if(article.contentType != 'video'){ %>
								<div class='image-preview'>
									<figure>
										<a href='/news/<%= article._id %>'>
					  						<img class='article-figure' src='<%= article.image %>'>
										</a>
				  					</figure>
								</div>
								<% } %>
					  			<div class='post-content' id='content-preview'>
						  			<div class='article-body-preview'><%- article.body.substr(0, 300) %>...</div>
						  			<a class='btn btn-outline-primary btn-est-outline' href='/news/<%= article._id %>'>Read More</a>
					  			</div>
				  			</article>
						</div>
						<div class='clear-div' id='post-preview-clear'>
			    			<hr>
						</div>
						<% }); %>
					</div>
					<% if(articles.length == 25) { %>
					<div class='article-query-container'>
		  				<a class='btn btn-outline-primary btn-est-outline' id='article-query' href='/news/more-articles/<%= lastSeen %>'>More Articles</a>
					</div>
		 			<% } %>
				</div>
  			</div>
  		</div>
<% include ./partials/footer %>