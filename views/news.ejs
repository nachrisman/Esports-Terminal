<% include ./partials/header %>
      <div class='container-fluid' id='primary-wrapper' ng-app="app" ng-controller="scrollController">
        <div class='row'>
          <div class='col-xs-12 col-md-12' id='page-header'>
            <h1>News</h1>
          </div>
        </div>
        <div class='row'>
          <div class='col-xs-12 col-md-12'>
            <div class='clear-div'>
              <hr>
            </div>
          </div>
        </div>
        <div class='row'>
          <div class='col-xs-4 col-md-4' id='sidebar-container'>
            <div class='content-divider-sm'>
              <h2>Missed It?</h2>
            </div>
            <div class='preview'>
            <% if(pastArticles.length == 0) {               %>
              <p>Nothing to see here...</p>
            <% } else {                                     %>
            <% pastArticles.forEach(function(pastArticle) { %>
              <div class='article-preview'>
                <a class='preview-link' href='/news/<%= pastArticle._id %>'>
                    <img class='article-preview-image' src='<%= pastArticle.image %>'>
                  <div class='preview-headline'>
                    <h3 class='article-title'><%= pastArticle.title.substr(0, 100) %></h3>
                  </div>
                </a>
              </div>
            <% });                                          %>
            <% };                                           %>
            </div>
            <div class='clear-div'>
              <hr>
            </div>
            <div class='content-divider-sm'>
              <h2>Random Picks</h2>
            </div>
            <div class='preview'>
            <% if(randomArticles.length == 0) {               %>
              <p>Nothing to see here...</p>
            <% } else {                                     %>
            <% randomArticles.forEach(function(randomArticle) { %>
            <%   if(randomArticle.contentType != 'video') { %>
              <div class='article-preview'>
                <a class='preview-link' href='/news/<%= randomArticle._id %>'>
                  <div class='article-preview-image'>
                    <img class='article-preview-image' src='<%= randomArticle.image %>'>
                  </div>
                  <div class='preview-headline'>
                    <h3 class='article-title'><%= randomArticle.title.substr(0, 100) %></h3>
                  </div>
                </a>
              </div>
              <% } %>
            <% }); %>
            <% }; %>
            </div>
            <div class='clear-div'>
              <hr>
            </div>
            <div class='content-divider-sm'>
              <h2>Popular Videos</h2>
            </div>
            <div class='preview'>
            <% if(pastArticles.length == 0) {               %>
              <p>Nothing to see here...</p>
            <% } else {                                     %>
            <% pastArticles.forEach(function(pastArticle) { %>
            <%   if(pastArticle.contentType == 'video') { %>
              <div class='article-preview'>
                <a class='preview-link' href='/news/<%= pastArticle._id %>'>
                  <div class='article-preview-image'>
                    <img class='article-preview-image' src='<%= pastArticle.image %>'>
                  </div>
                  <div class='preview-headline'>
                    <h3 class='article-title'><%= pastArticle.title.substr(0, 100) %></h3>
                  </div>
                </a>
              </div>
              <% } %>
            <% }); %>
            <% }; %>
            </div>
            <div class='clear-div'>
              <hr>
            </div>
          </div>
          <div class='col-xs-8 col-md-8' id='post-wrapper' >
            <div class='content-feed' >
              <div class='content-divider-sm' id='news-feed-header'>
                <h2>News Feed</h2>
              </div>
              <div class='scroller' infinite-scroll='getMoreArticles()'>
                <!-- INFINITE SCROLL PORTION -->
                
                
