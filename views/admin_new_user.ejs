<% include ./partials/admin_header %>
		<div class='container-fluid'>
			<div class='page-header'>
				<h2>Add a New User</h2>
				<a class='btn btn-primary btn-est' href='/admin/view-users' role='button'>Return to Users</a>
			</div>
			<hr>
			<div class='content-form'>
				<form class='account-form' action='/admin/new-user' method='POST'>
					<div class='content-form-col'>
						<label for='first-name'>First Name:</label>
						<input class='form-control' type='text' name='firstName' id='first-name' required />
						<label for='last-name'>Last Name:</label>
						<input class='form-control' type='text' name='lastName' id='last-name' required />
						<label for='username'>Username:</label>
						<input class='form-control' type='text' name='username' id='username' required />
						<label for='email'>Email:</label>
						<input class='form-control' type='text' name='email' id='email' required />
						<label for='role'>Access Level:</label>
						<select class='form-control custom-select' type='select' name='role'>
							<option selected disabled>Select an Access Level</option>
							<% currentUser.roles.forEach(function(role){ %>
								<option value='<%= role %>'><%= role %></option>
							<% }); %>
						</select>
					</div>
					<div class='content-form-col'>
						<label for="user-twitter">Twitter:</label>
						<input class="form-control" type="text" name="twitter" id="user-twitter" />
						<label for="user-facebook">Facebook:</label>
						<input class="form-control" type="text" name="facebook" id="user-facebook" />
						<label for="user-youtube">YouTube:</label>
						<input class="form-control" type="text" name="youtube" id="user-youtube" />
						<label for="user-website">Website:</label>
						<input class="form-control" type="text" name="website" id="user-website" />
						<label for="user-profile-banner">Profile Banner:</label>
						<input class="form-control" type="text" name="profileBanner" id="user-profile-banner" />
						<label for="password">Password:</label>
						<input class="form-control" type="password" name="password" required />
						<label for="confirm-password">Confirm Password:</label>
						<input class="form-control" type="password" name="confirm-password" required />
						<div class='content-form-actions'>
							<button class='btn btn-outline-primary' type='submit' value='Add User'>Add User</button>
							<button class='btn btn-outline-danger' onclick="location.href='/admin/view-users';" disabled>Cancel</button>
						</div>
					</div>
				</form>
			</div>
			<hr>
    	</div>
<% include ./partials/admin_footer %>