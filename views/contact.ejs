<% include ./partials/header %>
		<div class='container-fluid'>
			<div class='row'>
				<div class='col-xs-12 col-md-12' id='page-header'>
					<h1>Contact Us</h1>
					<form class='content-search' action='/search/articles' method='GET'>
						<div class="input-group">
						  <input type="text" class="form-control" name='search' placeholder="search articles...">
						  <span class="input-group-btn">
							<button class='btn btn-primary btn-est' type='submit'>Search</button>
						  </span>
						</div>
					</form>
				</div>
		    </div>
		    <hr>
		    <div class='row'>
		    	<div class='col-xs-12 col-md-12 '>
		    		<div class='container' id='write-for-us'>
		    			<h3>Thanks for your interest in contacting us!</h3>
		    			<p>Just fill out the form below and we'll get back to you asap!</p>
		    		</div>
		    		<div class='container'>
		    			<form class='info-tip-submit' action='/contact' method='POST'>
		    				<% if(currentUser) { %>
		    				<div class='form-group row'>
		    					<div class='col-xs-6 col-md-6'>
		    						<label for='firstName'>First Name: </label>
		    						<input class='form-control' type='text' name='firstName' id='firstName' value='<%= currentUser.firstName %>' required>
		    					</div>
		    					<div class='col-xs-6 col-md-6'>
		    						<label for='lastName'>Last Name: </label>
		    						<input class='form-control' type='text' name='lastName' id='lastName' value='<%= currentUser.lastName %>' required>
		    					</div>
		    				</div>
		    				<div class='form-group row'>
		    					<div class='col-xs-6 col-md-6'>
		    						<label for='username'>Username: </label>
		    						<input class='form-control' type='text' name='username' id='username' value='<%= currentUser.username %>' required>
		    					</div>
		    					<div class='col-xs-6 col-md-6'>
		    						<label for='email'>Email: </label>
		    						<input class='form-control' type='email' name='email' id='email' value='<%= currentUser.email %>' required>
		    					</div>
		    				</div>
		    				<div class='form-group row'>
		    					<div class='col-xs-12 col-md-12'>
		    						<label for='message'>Message: </label>
		    						<textarea class='form-control' type='text' name='message' id='message' rows='8' required></textarea>
		    					</div>
		    				</div>
		    				<% } else { %>
		    				<div class='form-group row'>
		    					<div class='col-xs-6 col-md-6'>
		    						<label for='firstName'>First Name: </label>
		    						<input class='form-control' type='text' name='firstName' id='firstName' required>
		    					</div>
		    					<div class='col-xs-6 col-md-6'>
		    						<label for='lastName'>Last Name: </label>
		    						<input class='form-control' type='text' name='lastName' id='lastName' required>
		    					</div>
		    				</div>
		    				<div class='form-group row'>
		    					<div class='col-xs-6 col-md-6'>
		    						<label for='username'>Username: </label>
		    						<input class='form-control' type='text' name='username' id='username' required>
		    					</div>
		    					<div class='col-xs-6 col-md-6'>
		    						<label for='email'>Email: </label>
		    						<input class='form-control' type='email' name='email' id='email' required>
		    					</div>
		    				</div>
		    				<div class='form-group row'>
		    					<div class='col-xs-12 col-md-12'>
		    						<label for='message'>Message: </label>
		    						<textarea class='form-control' type='text' name='message' id='message' rows='8' required></textarea>
		    					</div>
		    				</div>
		    				<% } %>
		    				<hr>
		    				<button class='btn btn-primary btn-est' type='submit'>Submit the Info!</button>
		    			</form>
		    		</div>
		    	</div>
		    </div>
	    </div>

<% include ./partials/footer %>