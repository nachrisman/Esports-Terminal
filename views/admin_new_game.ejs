<% include ./partials/admin_header %>
			<div class='container-fluid'>
				<div class='row' id='page-header'>
					<div class='col-xs-8 col-md-8'>
						<h2>Add a New Game</h2>
					</div>
					<div class='col-xs-4 col-md-4'>
						<a class='btn btn-primary btn-est' href='/admin/view-games' role='button'>Return to Games</a>
					</div>
				</div>
				<div class='clear-div'>
					<hr>
				</div>
				<div class='row'>
					<div class='col-xs-12 col-md-12'>
						<form class='new-item-entry' action='/admin/view-games' method='POST'>
							<div class='form-group row'>
								<div class='col-xs-6 col-md-6'>
									<label for='title'>Title: </label>
									<input class='form-control' type='text' name='game[title]' id='title'>
								</div>
								<div class='col-xs-6 col-md-6'>
									<label for='abbreviation'>Abbreviation (SFV, LoL, etc): </label>
									<input class='form-control' type='text' name='game[abbreviation]' id='abbreviation'>
								</div>
							</div>
							<div class='form-group row'>
								<div class='col-xs-6 col-md-6'>
									<label for='platform'>Platform: </label>
									<input class='form-control' type='text' name='game[platform]' id='platform'>
								</div>
								<div class='col-xs-6 col-md-6'>
									<label for='genre'>Genre: </label>
									<select class='form-control custom-select' type='select' name='game[genre]' id='genre'>
								  	<% genres.forEach(function(genre){ %>
								  	  	<option value='<%= genre %>'><%= genre %></option>
								  	<% }); %> 
								  	</select>
								</div>
							</div>
							<div class='form-group row'>
								<div class='col-xs-6 col-md-6'>
									<label for='logopng'>PNG Logo Link: </label>
									<input class='form-control' type='text' name='game[logopng]' id='logopng'>
								</div>
								<div class='col-xs-6 col-md-6'>
									<label for='logojpg'>JPG Logo Link: </label>
									<input class='form-control' type='text' name='game[logojpg]' id='logojpg'>
								</div>
							</div>
							<div class='clear-div'>
								<hr>
							</div>
							<button class='btn btn-primary btn-est' type='submit'>Add Game</button>
						</form>
					</div>
				</div>
			</div>

<% include ./partials/admin_footer %>