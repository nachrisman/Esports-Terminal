<% include ./partials/admin_header %>
<div class='container'>
	  <h2>Add a new game:</h2>
	  <form class='new-item-entry' id='new-game' action='/admin/view-games' method='POST'>
		<fieldset id='meta'>
	  	  <label>Title: </label>
	  	  <input type='text' name='game[title]'>
	  	  <br>
	  	  <label>Abbreviation: </label>
	  	  <input type='text' name='game[abbreviation]'>
	  	  <label>Platform(s): </label>
	  	  <input type='text' name='game[platform]'>
	  	  <br>
	  	  <label>Genre: </label>
	  	  <select type='select' name='game[genre]'>
	  	  	<% genres.forEach(function(genre){ %>
	  	  		<option value='<%= genre %>'><%= genre %></option>
	  	  	<% }); %> 
	  	  </select>
	  	  <br>
	  	  <label>Game Logo (JPG) URL: </label>
	 	  <input type='text' name='game[logojpg]'>
	 	  <label>Game Logo (PNG) URL: </label>
	 	  <input type='text' name='game[logopng]'>
		</fieldset>
		<button type='submit'>Add Game</button>
	  </form>
	  </div>
<% include ./partials/admin_footer %>