<% include ./partials/header %>
		<div class='container-fluid' id='primary-wrapper'>
			<div class='row'>
				<div class='col-xs-2 col-md-2'>
					<div class='account-nav'>
						<h3>My Account</h3>
						<ul>
							<li><a href='/account/meta-settings'>META Settings</a></li>
							<li><a href='/account/info'>Account Information</a></li>
							<li><a href='/account/security'>Security &amp; Other</a></li>
							<li><a href='/logout'>Log Out</a></li>
						</ul>
					</div>
				</div>
				<div class='col-xs-10 col-md-10'>
					<div class='account-content'>
						<h1>Password Reset</h1>
						<p>In order to change your password, enter your current one & your new one.</p>
						<div class='clear-div'>
							<hr>
						</div>
						<form class='reset-password' action='/account/change-password?_method=PUT' method='POST'>
							<div class='form-group row'>
								<div class='col-xs-3 col-md-3'>
									<label for='oldPassword'>Current Password: </label>
								</div>
								<div class='col-xs-9 col-md-9'>
									<input class='form-control' type='password' name='oldPassword' id='oldPassword' required>
								 </div>
							</div>
							<div class='form-group row'>
								<div class='col-xs-3 col-md-3'>
									<label for='newPassword'>New Password: </label>
								</div>
								<div class='col-xs-9 col-md-9'>
									<input class='form-control' type='password' name='newPassword' id='newPassword' required>
								</div>
							</div>
							<div class='clear-div'>
								<hr>
							</div>
							<button class='btn btn-primary btn-est account-form-btn' type='submit'>Update Password</button>
						</form>
					</div>
				</div>
			</div>
		</div>
<% include ./partials/footer %>