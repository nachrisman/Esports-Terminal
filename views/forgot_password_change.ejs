<% include ./partials/header %>
      <div class='container-fluid' id='primary-wrapper'>
        	<div class='col-xs-12 col-md-12'>
        		<div class='account-content'>
                  <h1>Password Reset</h1>
                  <p>Please enter your new password, then re-enter it to confirm.</p>
                  <div class='clear-div'>
                    <hr>
                  </div>
                  <form class='reset-password' action='/forgot-password/change/<%= user._id %>?_method=PUT' method='POST'>
                    <div class='form-group row'>
                      <div class='col-xs-3 col-md-3'>
                        <label for='newPassword'>New Password: </label>
                      </div>
                      <div class='col-xs-9 col-md-9'>
                        <input class='form-control' type='password' name='newPassword' id='newPassword' required>
                      </div>
                    </div>
                    <div class='form-group row'>
                      <div class='col-xs-3 col-md-3'>
                        <label for='confirmedPassword'>Confirm New Password: </label>
                      </div>
                      <div class='col-xs-9 col-md-9'>
                        <input class='form-control' type='password' name='confirmedPassword' id='confirmedPassword' required>
                      </div>
                    </div>
                    <div class='clear-div'>
                      <hr>
                    </div>
    			          <button class='btn btn-primary btn-est account-form-btn' type='submit'>Update Password</button>
                  </form>
            </div>
          </div>
        </div>
      </div>

<% include ./partials/footer %>